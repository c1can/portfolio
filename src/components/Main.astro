---
import Container from "./Container.astro";
---

<main class="h-[95vh] bg-[url('/pexels-aleksandar-pasaric-1694000.webp')] bg-center bg-no-repeat bg-cover">
	<div class="info h-full grid place-items-center">
		<Container>
			<div class="flex text-white justify-between items-center">
				<div class="info flex flex-col gap-10">
					<div class="texts">
						<p class="font-extrabold text-7xl mb-5">Hola!<br>Soy Carlos Reyes</p>
						<span id="element" class="text-2xl"></span>
					</div>
					<div class="buttons flex gap-4">
						<button class="text-lg font-bold border-2 bg-white text-black p-4 rounded-lg hover:opacity-80 transition-all">Descarga mi CV</button>
						<a href="#Contacto" class="text-lg font-bold border-2 border-white p-4 rounded-lg">Contacto</a>
					</div>
				</div>
				<div class="img hidden lg:block">
					<div class="h-[600px] w-[600px] grid place-items-center">
						<img class="w-full" src="/hero.png" alt="mainImage">
					</div>
				</div>
			</div>
		</Container>
	</div>
</main>

<script>
  import TypeIt from "typeit"

  document.addEventListener("DOMContentLoaded", () => {
    new TypeIt("#element", {
      strings: ["Desarrollador Web"],
    }).go();
  });
</script>
