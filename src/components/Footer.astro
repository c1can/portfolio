---
const social = [
    {
        url: 'https://icongr.am/devicon/linkedin-plain.svg?size=30&color=000000',
        path: '/',
        alt: 'Linkedin'
    },
    {
        url: 'https://icongr.am/devicon/github-original.svg?size=30&color=000000',
        path: 'https://github.com/escarcan',
        alt: 'Github'
    }
]
---

<footer class="bg-black pt-10 pb-5">
    <ul class="flex justify-center gap-10">
        {
            social.map(({ url, path, alt }) => (
                <li class="bg-white p-1 rounded-sm">
                    <a target="_blank" href={path}>
                        <img src={url} alt={alt}>
                    </a>
                </li>
            ))
        }
    </ul>
    <p class="text-white text-center mt-5 font-extralight text-sm">Made with ❤️ by Carlos Reyes</p>
</footer>