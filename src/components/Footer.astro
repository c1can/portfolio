---
const social = [
    {
        url: 'https://icongr.am/devicon/linkedin-plain.svg?size=30&color=000000',
        path: '/'
    },
    {
        url: 'https://icongr.am/devicon/github-original.svg?size=30&color=ffffff',
        path: 'https://github.com/escarcan'
    }
]
---

<footer class="bg-black pt-20 pb-5">
    <ul class="flex justify-center gap-10">
        {
            social.map(({ url, path }) => (
                <li class="bg-white p-1 rounded-sm">
                    <a target="_blank" href={path}>
                        <img src={url} alt="">
                    </a>
                </li>
            ))
        }
    </ul>
    <p class="text-white text-center mt-5 font-extralight text-sm">Desarrollado por Carlos Reyes</p>
</footer>