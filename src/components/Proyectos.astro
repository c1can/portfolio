---
import Container from "./Container.astro";

const proyectos = [
  {
    title: "MovieApp",
    img_url: "/proyectos/flags.webp",
    github: "https://github.com/escarcan/MovieApp-Frontend",
    description:
      "Aplicacion de Cine para comprar y reservar boletos e incluye un panel de administrador",
    to: "https://movie-app-frontend-one.vercel.app/",
    alt: 'MovieAppImg'
  },
  {
    title: "PaisesApp",
    img_url: "/proyectos/movies.webp",
    github: "https://github.com/escarcan/rest-countries-api-project",
    description:
      "Aplicacion para ver las banderas del mundo e informacion del Pais",
    to: "https://carlosreyes84-restcountries.netlify.app/",
    alt: 'PaisesAppImg'
  },
  {
    title: "Acortador de URL",
    img_url: "/proyectos/short.webp",
    github: "https://github.com/escarcan/URL-Shortening-API-LandingPage",
    description: "Aplicacion para acortar tus URLS usando la API de shrtcode",
    to: "https://escarcan.github.io/URL-Shortening-API-LandingPage/",
    alt: 'ShortenerImg'
  },
  {
    title: "EasyBank LandingPage",
    img_url: "/proyectos/landingEasy.webp",
    github: "https://github.com/escarcan/Desktop-First-EasyBank-Project",
    description: "Sitio web estatico, ejercicio de la pagina FrontendMentor",
    to: "https://escarcan.github.io/Desktop-First-EasyBank-Project/",
    alt: 'LandingImg'
  },
  {
    title: "TodoList",
    img_url: "/proyectos/todoList.webp",
    github: "https://github.com/escarcan/React-Todo-List-Level-Up",
    description: "Una simple todoList con registro y login de usuarios",
    to: "https://todolist-react-levelup.netlify.app/login",
    alt: 'TodoListImg'
  },
];
---

<section class="bg-white py-20" id="Proyectos">
  <Container>
    <h2 class="text-4xl font-bold text-center">Mis Proyectos</h2>

    <div class="proyectos flex justify-center gap-10 mt-10 flex-wrap">
      {
        proyectos.map(({ img_url, title, github, description, to, alt }) => (
          <div class="flex justify-center">
            <div class="rounded-lg shadow-xl bg-white max-w-sm">
              <div class="img h-[200px] mb-6">
                <a target="_blank" href={to}>
                  <img
                    class="rounded-t-lg hover:scale-90 transition-all"
                    src={img_url}
                    alt={alt}
                  />
                </a>
              </div>
              <div class="p-6">
                <h3 class="text-gray-900 text-xl font-bold mb-2">{title}</h3>
                <p class="text-gray-700 text-base mb-4">{description}</p>
                <div class="flex justify-between">
                  <a
                    target="_blank"
                    href={to}
                    class=" inline-block px-6 py-2.5 bg-black text-white font-bold text-md leading-tight rounded shadow-md"
                  >
                    Visitar
                  </a>

                  <a href={github} target="_blank">
                    <img
                      src="https://icongr.am/devicon/github-original.svg?size=35&color=currentColor"
                      alt="github"
                    />
                  </a>
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </Container>
</section>
