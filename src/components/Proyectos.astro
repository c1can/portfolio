---
import Container from "./Container.astro";

const proyectos = [
  {
    title: 'MovieApp',
    url: "../../public/proyectos/flags.webp",
  },
  {
    title: 'PaisesAPI',
    url: "../../public/proyectos/movies.webp",
  },
  {
    title: 'Acortador de URL',
    url: "../../public/proyectos/short.webp",
  },
  {
    title: 'EasyBank LandingPage',
    url: '../../public/proyectos/landingEasy.webp'
  }, 
  {
    title: 'TodoList',
    url: '../../public/proyectos/todoList.webp'
  }
];
---  

  <section class="bg-white py-20">
    <Container>
      <h2 class="text-4xl font-bold text-center">Mis Proyectos</h2>

      <div class="proyectos flex justify-center gap-10 mt-10 flex-wrap">
        {
          proyectos.map(({ url, title }) => (
            <div class="flex justify-center">
              <div class="rounded-lg shadow-lg bg-white max-w-sm">
                <div class="img h-[200px] mb-6">
                  <a href="#!">
                    <img
                    class="rounded-t-lg hover:scale-90 transition-all"
                    src={url}
                    alt=""
                    />
                    </a>
                  </div>
                <div class="p-6">
                  <h5 class="text-gray-900 text-xl font-medium mb-2">
                    {title}
                  </h5>
                  <p class="text-gray-700 text-base mb-4">
                    Some quick example text to build on the card title and make
                    up the bulk of the card's content.
                  </p>
                  <div class="flex gap-4">
                    <button
                    type="button"
                    class=" inline-block px-6 py-2.5 bg-black text-white font-medium text-xs leading-tight rounded shadow-md"
                    >
                    GitHub
                    </button>

                  <div class="github h-9 w-9"></div>
                  </div>
                  
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </Container>
  </section>

<style>
  .github {
    background-image: url('../../public/github.png');
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
  }
</style>